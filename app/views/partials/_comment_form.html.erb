<%= form_with(model: [@user, @post.comments.build], url: user_post_comments_path(@user, @post), method: :post) do |form| %>
  <div class="container">
  <div class="row justify-content-center align-items-center ">
  <div class="col-6 border border-primary rounded-1  border-2 p-5">

  <div class="form-group my-2 py-2">
  <%= form.label :text, class: 'form-label' %>
  <%= form.text_area :text, class: 'form-control', placeholder: "Your comment here..." %>
  </div>

  <div class="d-flex justify-content-center">
  <%= form.submit "Add Comment", class: 'btn btn-primary mt-3' %>
  </div>

  </div>
  </div>
  </div>
<% end %>